<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.phoneunison</groupId>
  <artifactId>phoneunison-desktop</artifactId>
  <name>PhoneUnison Desktop</name>
  <version>1.0.0-SNAPSHOT</version>
  <description>Cross-platform phone-PC connectivity application for Windows</description>
  <url>https://github.com/phoneunison/phoneunison</url>
  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>https://www.apache.org/licenses/LICENSE-2.0</url>
    </license>
  </licenses>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.12.1</version>
        <configuration>
          <source>21</source>
          <target>21</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>com.phoneunison.desktop.Main</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.phoneunison.desktop.Main</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.2.3</version>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>installer</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.panteleyev</groupId>
            <artifactId>jpackage-maven-plugin</artifactId>
            <version>1.6.5</version>
            <executions>
              <execution>
                <id>exe</id>
                <phase>package</phase>
                <goals>
                  <goal>jpackage</goal>
                </goals>
                <configuration>
                  <type>EXE</type>
                </configuration>
              </execution>
              <execution>
                <id>msi</id>
                <phase>package</phase>
                <goals>
                  <goal>jpackage</goal>
                </goals>
                <configuration>
                  <type>MSI</type>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <name>PhoneUnison</name>
              <appVersion>1.0.0</appVersion>
              <vendor>PhoneUnison</vendor>
              <description>Cross-platform phone-PC connectivity application</description>
              <copyright>Copyright Â© 2024 PhoneUnison</copyright>
              <input>${project.build.directory}</input>
              <mainJar>${project.artifactId}-${project.version}.jar</mainJar>
              <mainClass>com.phoneunison.desktop.Main</mainClass>
              <destination>${project.build.directory}/installer</destination>
              <javaOptions>
                <option>-Xmx512m</option>
                <option>--add-opens=java.base/java.lang=ALL-UNNAMED</option>
              </javaOptions>
              <icon>${project.basedir}/src/main/resources/icons/app-icon.ico</icon>
              <winDirChooser>true</winDirChooser>
              <winMenu>true</winMenu>
              <winMenuGroup>PhoneUnison</winMenuGroup>
              <winShortcut>true</winShortcut>
              <winShortcutPrompt>true</winShortcutPrompt>
              <winPerUserInstall>false</winPerUserInstall>
              <winConsole>false</winConsole>
              <winUpgradeUuid>a1b2c3d4-e5f6-7890-abcd-ef1234567890</winUpgradeUuid>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>5.10.1</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>junit-jupiter-api</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-jupiter-params</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-jupiter-engine</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.testfx</groupId>
      <artifactId>testfx-junit5</artifactId>
      <version>4.0.18</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>testfx-core</artifactId>
          <groupId>org.testfx</groupId>
        </exclusion>
        <exclusion>
          <artifactId>hamcrest</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
        <exclusion>
          <artifactId>assertj-core</artifactId>
          <groupId>org.assertj</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <netty.version>4.1.104.Final</netty.version>
    <maven.compiler.source>21</maven.compiler.source>
    <bluecove.version>2.1.1</bluecove.version>
    <zxing.version>3.5.2</zxing.version>
    <maven.compiler.target>21</maven.compiler.target>
    <gson.version>2.10.1</gson.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>21.0.1</javafx.version>
    <junit.version>5.10.1</junit.version>
  </properties>
</project>
